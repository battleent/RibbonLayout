<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RibbonLayout">
        <attr name="header_text" format="string"/>
        <attr name="header_textSize" format="integer"/>
        <attr name="header_textColor" format="color"/>
        <attr name="header_ribbonColor" format="color"/>
        <attr name="header_ribbonRadius" format="integer"/>
        <attr name="header_padding" format="integer"/>
        <attr name="show_header" format="boolean"/>
        <attr name="bottom_text" format="string"/>
        <attr name="bottom_textSize" format="integer"/>
        <attr name="bottom_textColor" format="color"/>
        <attr name="bottom_ribbonColor" format="color"/>
        <attr name="bottom_height" format="integer"/>
        <attr name="bottom_padding" format="integer"/>
        <attr name="show_bottom" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="RibbonTag">
        <attr name="tag_textSize" format="integer"/>
        <attr name="tag_textColor" format="color"/>
        <attr name="tag_ribbonColor" format="color"/>
        <attr name="tag_ribbonRadius" format="integer"/>
        <attr name="tag_padding_left" format="dimension"/>
        <attr name="tag_padding_top" format="dimension"/>
        <attr name="tag_padding_right" format="dimension"/>
        <attr name="tag_padding_bottom" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="RibbonTagListView">
        <attr name="item_space" format="integer"/>
    </declare-styleable>
    <declare-styleable name="RibbonCoverLayout">
        <attr name="cover" format="reference"/>
        <attr name="cover_visibility" format="boolean"/>
        <attr name="cover_color" format="color"/>
        <attr name="cover_alpha" format="float"/>
        <attr name="cover_text" format="string"/>
        <attr name="cover_textSize" format="integer"/>
        <attr name="cover_textColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="RibbonFickleCoverLayout">
        <attr name="fickle_cover" format="reference"/>
        <attr name="fickle_cover_second" format="reference"/>
        <attr name="fickle_delay" format="integer"/>
    </declare-styleable>
</resources>